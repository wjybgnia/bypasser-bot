{
  "name": "scriptblox-discord-bot",
  "script": "src/index.js",
  "instances": 1,
  "exec_mode": "fork",
  "env": {
    "NODE_ENV": "production"
  },
  "error_file": "./logs/err.log",
  "out_file": "./logs/out.log",
  "log_file": "./logs/combined.log",
  "time": true,
  "autorestart": true,
  "max_restarts": 10,
  "min_uptime": "10s",
  "max_memory_restart": "1G",
  "restart_delay": 4000
}
